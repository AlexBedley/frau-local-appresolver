#! /usr/bin/env node

var chalk = require('chalk'),
	argv = require('yargs');

argv = argv.usage('Usage: localappresolver --appclass|-c [--configfile|-f] [--hostname|-h] [--port|-p] [--dist|-d]')
	.example('localappresolver -c urn:d2l:fra:class:some-app -f appconfig.json -h acme.com -p 3000 -d dist')
	.alias('c', 'appclass')
	.alias('f', 'configfile')
	.alias('h', 'hostname')
	.alias('p', 'port')
	.alias('d', 'dist')
	.argv;

var appResolver = require('../lib/appresolver');

var opts = {
	appClass : (argv.appclass || process.env.npm_package_config_frauLocalAppResolver_appClass),
	configFile : (argv.configfile || process.env.npm_package_config_frauLocalAppResolver_configFile),
	dist : (argv.dist || process.env.npm_package_config_frauLocalAppResolver_dist),
	hostname : (argv.hostname || process.env.npm_package_config_frauLocalAppResolver_hostname),
	port : (argv.port || process.env.npm_package_config_frauLocalAppResolver_port)
};

appResolver = appResolver(opts.appClass, opts);

appResolver.host()
	.then(function() {
		console.log(chalk.green('Hosting...\n'));
		console.log(
			chalk.grey( 
				'   app-class: ' + opts.appClass + '\n' +
				'   app-config: ' + appResolver.getConfigUrl() + '\n'
			)
		);
	}).catch(function(err) {
		if (err && err.code === 'EADDRINUSE') {
			console.log(chalk.red('Error: ' + err.code + '. Port is in use.\n'));
		} else {
			console.log(chalk.red('Error: ' + err.code + '.\n'));
		}
	});
